<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs\nlog.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <!-- write logs to file  -->
    <target xsi:type="File" name="EF" fileName="logs\EF-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />
    <target xsi:type="File" name="Hangfire" fileName="logs\Hangfire-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />
    <target xsi:type="File" name="MkeAlerts" fileName="logs\MkeAlerts-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />
    <target xsi:type="File" name="Web" fileName="logs\Web-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />

    <target xsi:type="File" name="Misc" fileName="logs\Misc-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

    <!--
    <target xsi:type="File" name="Full" fileName="logs\Full-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />
    -->
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--
    <logger name="*" minlevel="Trace" writeTo="Full" />
    -->

    <!--All logs, including from Microsoft-->
    <logger name="Microsoft.EntityFrameworkCore.*" minlevel="Warn" writeTo="EF" final="true" />
    <logger name="Hangfire.*" minlevel="Info" writeTo="Hangfire" final="true" />
    <logger name="MkeAlerts.*" minlevel="Trace" writeTo="MkeAlerts" final="true" />
    <logger name="Microsoft.AspNetCore.Hosting.Internal.WebHost.*" minlevel="Info" writeTo="Web" final="true" />

    <!--Skip non-critical Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" maxlevel="Info" final="true" /> <!-- BlackHole without writeTo -->
    <logger name="*" minlevel="Trace" writeTo="Misc" />
  </rules>
</nlog>